{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Equipamento",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "nome": { "type": "string", "minLength": 1, "maxLength": 100 },
    "custo": { "type": "number", "minimum": 0, "exclusiveMinimum": true },
    "tempoGarantia": { "type": "string", "format": "date-time" },
    "proximaManutencaoPreventiva": { "type": "string", "format": "date-time" },
    "numeroSerie": { "type": "string", "minLength": 1, "maxLength": 50 },
    "marca": { "type": "string", "minLength": 1, "maxLength": 50 },
    "descarte": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": ["nome", "custo", "tempoGarantia", "proximaManutencaoPreventiva", "numeroSerie", "marca"]
}