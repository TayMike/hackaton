{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hospital",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "nome": { "type": "string", "minLength": 1, "maxLength": 100 },
    "cnpj": { "type": "string", "pattern": "^\\d{14}$" },
    "cep": { "type": "string", "pattern": "^\\d{8}$" },
    "numero": { "type": "integer", "minimum": 1 },
    "colaboradoresIds": {
      "type": "array",
      "items": { "type": "string", "format": "uuid" }
    },
    "quantidadeLeitoAtual": { "type": "integer", "minimum": 0 },
    "quantidadeLeitoMaximo": { "type": "integer", "minimum": 1 }
  },
  "required": [
    "nome",
    "cnpj",
    "cep",
    "numero",
    "colaboradoresIds",
    "quantidadeLeitoAtual",
    "quantidadeLeitoMaximo"
  ]
}